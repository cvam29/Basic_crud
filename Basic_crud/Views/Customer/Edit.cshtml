@model Customer
@{
    ViewData["Title"] = "Edit";
}

<h1>Update Customer</h1>

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Edit Customer</h2>
    </div>

    <form method="post" asp-action="Edit">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Name">Customer Name</label>
                <input type="text" class="form-control mb-3" asp-for="Name" placeholder="Enter Name">
                <span asp-validation-for="Name" class=" alert-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Email">Email</label>
                <input type="text" class="form-control mb-3" asp-for="Email" placeholder="Enter Address">
                <span asp-validation-for="Email" class=" alert-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="City">City</label>
                <input type="text" class="form-control mb-3" asp-for="City" placeholder="Enter City">
                <span asp-validation-for="City" class=" alert-danger"></span>
            </div>
        </div>
         <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Phone">Phone</label>
                <input type="text" class="form-control mb-3" asp-for="Phone" placeholder="Enter Phone">
                <span asp-validation-for="Phone" class=" alert-danger"></span>
            </div>
        </div>
          <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Save</button>
        <a asp-controller="Customer" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>
    
</div>

